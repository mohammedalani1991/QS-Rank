@model WebOS.Models.SystemSettings

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_ViewHeader" />
<div class="container">

    <div class="container">
        <h4>التعديل على اعدادات الموقع</h4>
