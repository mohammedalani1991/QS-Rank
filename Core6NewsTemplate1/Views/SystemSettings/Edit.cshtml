                    <div class="mb-3">
                        <label asp-for="Youtube" class="control-label"></label>
                        <input asp-for="Youtube" class="form-control" />
                        <span asp-validation-for="Youtube" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Instagram" class="control-label"></label>
                        <input asp-for="Instagram" class="form-control" />
                        <span asp-validation-for="Instagram" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LastUpate" class="control-label"></label>
                        <input asp-for="LastUpate" class="form-control" />
                        <span asp-validation-for="LastUpate" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input type="submit" value="حفظ" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

      @*  <div>
            <a asp-controller="ApplicationUsers" asp-action="Control">لوحة التحكم</a>
        </div>*@
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
