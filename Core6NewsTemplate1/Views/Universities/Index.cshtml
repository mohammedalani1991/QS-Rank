@model IEnumerable<WebOS.Models.University>

@{
    ViewData["Title"] = "Index";
}
<partial name="_ViewHeader" />

<div class="container">

<h1>الجامعات</h1>

<p>
    <a asp-action="Create">اضافة جامعة جديدة</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArUniversityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Indx)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsVisible)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArUniversityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Indx)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.ArCountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsVisible)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>