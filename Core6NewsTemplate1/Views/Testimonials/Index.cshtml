@model IEnumerable<WebOS.Models.Testimonial>

@{
    ViewData["Title"] = "الشهادات";
}


<partial name="_ViewHeader" />
<div class="px-5">



    <p>
        <a asp-action="Create">إضافة مؤسسة شريكة</a>
    </p>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnName)
                    </th>
                 @*   <th>
                        @Html.DisplayNameFor(model => model.BriefDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnBriefDescription)
                    </th>*@
                   @* <th>
                        @Html.DisplayNameFor(model => model.Job)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnJob)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                   @* <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnName)
                        </td>
                     @*   <td>
                            @Html.DisplayFor(modelItem => item.BriefDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnBriefDescription)
                        </td>*@
                       @* <td>
                            @Html.DisplayFor(modelItem => item.Job)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnJob)
                        </td>*@
                        <td>
                           @* @Html.DisplayFor(modelItem => item.Image)*@
                            <img class="img-fluid" width="50" src="/Pictures/@item.Image" />

                        </td>
                      @*  <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>*@
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">تحرير</a> 
                           @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                            <form asp-action="Delete">
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="submit" value="حذف" class="" /> 
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
