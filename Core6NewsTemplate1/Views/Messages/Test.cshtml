@model WebOS.Models.MessageViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{ ApplicationUser currenUser = await UserManager.GetUserAsync(User); }

@{
    ViewData["Title"] = "الرسائل";
}
<h2>&nbsp;</h2>
<div class="col-lg-12">
    <div class="col-lg-12">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 center-block">
            <div data-interval="false" id="myCarousel" class="carousel slide text-center" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <h5>ddddddddddddddddddddddddddddddddddddd</h5>
                    </div>

                    <div class="item">
                        <img src="~/images/9727d823-ce00-4f5f-8d95-14ebc4bfaf3d.jpg" class="center-block img-rounded" />
                    </div>

                    <div class="item">
                        <img src="~/images/9727d823-ce00-4f5f-8d95-14ebc4bfaf3d.jpg" class="center-block img-rounded" />
                    </div>
                </div>

                <!-- Left and right controls -->
            </div>
            <a class="pull-right btn btn-info" href="#myCarousel" data-slide="prev">
                <span class="fa fa-chevron-right"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="pull-left btn btn-info" href="#myCarousel" data-slide="next">
                <span class="fa fa-chevron-left"></span>
                <span class="sr-only">Next</span>
            </a>
            <h4>&nbsp;</h4>
            <h4>&nbsp;</h4>
            <a class="btn btn-success h3 center-block"  data-toggle="modal" data-target="#messagemodel">سجل الان</a>
            <div id="messagemodel" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title text-center">التسجيل</h4>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3" id="app" hidden>
                                <label class="control-label h4">المستخدم</label>
                                @*<input readonly value="@Model.ApplicationUser.ArName" class="form-control" />
                                <input readonly value="@Model.ApplicationUser.Id" name="appuser" class="form-control" />*@
                            </div>
                            <div class="mb-3">
                                <input placeholder="العنوان - هذا الحقل ضروري" name="title" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <textarea placeholder="الرسالة - هذا الحقل ضروري" rows="5" name="message" class="form-control"></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="control-label h4">ملف</label>
                                <input name="file" type="file" id="file" accept=".docx,.pdf" class="btn btn-info col-lg-12" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button data-dismiss="modal" id="addmessage" type="submit" class="btn btn-secondary h5 pull-right">إرسال</button>
                        </div>
                    </div>

                </div>
            </div>


        </div>
        <div class="col-lg-2"></div>

    </div>
    <hr />
</div>

@section Scripts{

    }