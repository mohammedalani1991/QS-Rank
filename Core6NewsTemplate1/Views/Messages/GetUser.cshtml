@model IEnumerable<WebOS.Models.ApplicationUser>
@{
    ViewData["Title"] = "البحث عن مستخدم";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>إبحث عن مستخدم للحصول على جميع رسائله</h5>

<div class="row">
    <div class="col-sm-4">
        <form asp-action="GetUser">
            <input name="q" class="form-control" placeholder="أدخل اسم المستخدم او البريد الالكتروني للبحث" />
            <input value="بحث" type="submit" class="btn-sm btn-primary" />
        </form>
    </div>
    <div class="col-sm-8"></div>
    @if (Model.Any())
    {
        <table class="table table-responsive table-bordered">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ArName)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.EnName)</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td><a asp-action="Index" asp-route-id="@item.Id"> @Html.DisplayFor(modelitem => item.ArName)</a></td>
                    <td>@Html.DisplayFor(modelitem => item.Email)</td>
                    <td>@Html.DisplayFor(modelitem => item.EnName)</td>
                </tr>
            }
        </table>


    }
</div>