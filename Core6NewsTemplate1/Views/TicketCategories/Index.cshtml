@model IEnumerable<WebOS.Models.TicketCategory>

@{
    ViewData["Title"] = "أقسام التذاكر";
}


<div class="row">
    <div class="col-lg-12 bg-white p-1">
        <p class="d-inline">
            <a class="btn btn-success rounded-0" asp-action="Create">إضافة قسم</a>
        </p>
        @if (Model.Any())
        {
            <table class="table table-responsive mt-2">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NotifyEmail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NotifyEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                <a title="تعديل" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-edit"></span></a> |
                                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                                <a title="حذف" asp-action="Delete" asp-route-id="@item.Id"><span class="fa text-danger fa-trash"></span></a>
                                @*<a asp-action="Delete" asp-route-id="@item.Id">Tickets</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>