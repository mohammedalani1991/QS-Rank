@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

    <partial name="_ViewHeader" />
<div class="px-5">

<div class="bg-primary panel-body"><h4>الأدوار</h4></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<table id="rolestbl" class="table-hover table table-striped table-bordered dt-responsive">

    <tr>
        <th>ID</th>
        <th>الإسم</th>
        <th>العمليات</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">لا توجد أدوار</td></tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-success rounded-0" asp-action="AddUser" asp-route-id="@role.Id">إضافة</a>
                        <a class="btn btn-sm btn-primary rounded-0" asp-action="Rename" asp-route-id="@role.Id">إعادة تسمية</a>
                        <a class="btn btn-sm btn-primary rounded-0" asp-action="Edit" asp-route-id="@role.Id">التعديل على المستخدمين</a>
                        @*<button type="submit" class="btn btn-sm btn-danger">Delete</button>*@
                        <a class="btn btn-sm btn-danger rounded-0" asp-action="Delete" asp-route-id="@role.Id">حذف</a>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary rounded-0" asp-action="Create">إضافة</a>
</div>