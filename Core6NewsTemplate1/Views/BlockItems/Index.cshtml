@model IEnumerable<WebOS.Models.BlockItem>

@{
    ViewData["Title"] = "العناصر التابعة لل block "+ ViewBag.block.Name;
}

<h1>العناصر التابعة لل block "@ViewBag.block.Name"</h1>

<p>
    <a class="btn btn-success rounded-0" asp-action="Create" asp-route-bid="@ViewBag.block.Id">إضافة عنصر جديد</a>
</p>
<table class="table bg-white table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Block)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.link)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Block.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.link)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a> 
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn-primary rounded-0" asp-action="Index" asp-controller="Blocks">رجوع</a>