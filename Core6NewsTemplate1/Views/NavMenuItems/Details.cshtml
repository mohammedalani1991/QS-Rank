@model WebOS.Models.NavMenuItem

@{
    ViewData["Title"] = "Details";
}
<partial name="_ViewHeader" />
<h1>العناصر المتفرعة من العنصر "@Model.Name"</h1>

<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-8">
            <table class="table table-responsive bg-white">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.indx)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Url)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.navitemsubs)
                    {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.indx
                        </td>
                        <td>
                            @item.Url
                        </td>
                        <td>
                            @item.IsActive
                        </td>
                        <td>
                            <a class="text-primary" asp-action="Edit" asp-controller="NavMenuItemSubs" asp-route-id="@item.Id"><span class="fa fa-edit"></span></a>
                            <a class="text-danger" asp-action="Delete" asp-controller="NavMenuItemSubs" asp-route-id="@item.Id"><span class="fa fa-trash"></span></a>
                            @*<a class="text-danger" asp-action="Details" asp-controller="NavMenuItemSubs" asp-route-id="@item.Id"><span class="fa fa-list"></span></a>*@
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
