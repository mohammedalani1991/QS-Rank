@model WebOS.Models.NavMenuItem

@{
    ViewData["Title"] = "Delete";
}

<partial name="_ViewHeader" />
<h3>هل أنت متأكد من حذف هذا العنصر"@Model.Name"</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NavMenu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NavMenu.Name)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.indx)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.indx)
