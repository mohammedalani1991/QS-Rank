                    @Html.DisplayNameFor(model => model.indx)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AddDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContentAlignment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Url)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UrlText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnUrlText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnTitle)
                    </td>
                  @*  <td>
                        @Html.DisplayFor(modelItem => item.SubTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnSubTitle)
                    </td>*@
                    <td>
                      @*  @Html.DisplayFor(modelItem => item.Image)*@
