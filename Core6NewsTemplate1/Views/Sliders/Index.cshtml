                        @Html.DisplayFor(modelItem => item.indx)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContentAlignment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Url)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UrlText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnUrlText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>*@
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">تحرير</a> |
                     
                        <form asp-action="Delete">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="submit" value="حذف" /> 
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>