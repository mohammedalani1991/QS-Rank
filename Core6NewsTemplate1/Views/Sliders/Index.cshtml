@model IEnumerable<WebOS.Models.Slider>


@{
    ViewData["Title"] = "معلومات بانر";
}

<partial name="_ViewHeader" />
<div class="px-5">

    <p>
        <a asp-action="Create">اضافة بانر</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnTitle)
                </th>
               @* <th>
                    @Html.DisplayNameFor(model => model.SubTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnSubTitle)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
